<?xml version="1.0"?>
<launch>

    <!--  ************** Global Parameters ***************  -->
    <param name="/use_sim_time" value="true"/>

    <arg name="map" default="pquad/pquad"/>

    <!--  ************** Stage Simulator ***************  -->
    <node pkg="stage_ros" type="stageros" name="stageros" args="$(find tt_start)/stage/maps/$(arg map).world">
        <remap from="base_scan" to="scan"/>
    </node>

    <!--  ************** Navigation ***************  -->
    <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
        <rosparam file="$(find tt_start)/stage/config/tt_teb_params/costmap_common_params.yaml" command="load" ns="global_costmap" />
        <rosparam file="$(find tt_start)/stage/config/tt_teb_params/costmap_common_params.yaml" command="load" ns="local_costmap" />
        <rosparam file="$(find tt_start)/stage/config/tt_teb_params/local_costmap_params.yaml" command="load" />
        <rosparam file="$(find tt_start)/stage/config/tt_teb_params/global_costmap_params.yaml" command="load" />
        <rosparam file="$(find tt_start)/stage/config/tt_teb_params/teb_local_planner_params.yaml" command="load" />

        <param name="base_global_planner" value="global_planner/GlobalPlanner" />
        <param name="planner_frequency" value="1.0" />
        <param name="planner_patience" value="5.0" />

        <param name="base_local_planner" value="teb_local_planner/TebLocalPlannerROS" />
        <param name="controller_frequency" value="5.0" />
        <param name="controller_patience" value="15.0" />

        <param name="clearing_rotation_allowed" value="false" /> <!-- Our carlike robot is not able to rotate in place -->
    </node>

    <!--  ****** Maps *****  -->
    <node name="map_server" pkg="map_server" type="map_server" args="$(find tt_start)/stage/maps/$(arg map).yaml" output="screen">
        <param name="frame_id" value="/map"/>
    </node>

    <group if="$(eval map == 'empty/empty')">
        <node pkg="amcl" type="amcl" name="amcl" output="screen">
            <rosparam file="$(find tt_start)/stage/config/amcl_params.yaml" command="load" />
            <param name="initial_pose_x" value="4"/>
            <param name="initial_pose_y" value="4"/>
            <param name="initial_pose_a" value="3.14"/>
        </node>
    </group>
    <group if="$(eval map == 'maze/maze')">
        <node pkg="amcl" type="amcl" name="amcl" output="screen">
            <rosparam file="$(find tt_start)/stage/config/amcl_params.yaml" command="load" />
            <param name="initial_pose_x" value="2"/>
            <param name="initial_pose_y" value="2"/>
            <param name="initial_pose_a" value="0"/>
        </node>
    </group>
    <group if="$(eval map == 'pquad/pquad')">
        <node pkg="amcl" type="amcl" name="amcl" output="screen">
            <rosparam file="$(find tt_start)/stage/config/amcl_params.yaml" command="load" />
            <param name="initial_pose_x" value="26"/>
            <param name="initial_pose_y" value="46"/>
            <param name="initial_pose_a" value="0"/>
        </node>
    </group>
    <group if="$(eval map == 'paint/paint')">
        <node pkg="amcl" type="amcl" name="amcl" output="screen">
            <rosparam file="$(find tt_start)/stage/config/amcl_params.yaml" command="load" />
            <param name="initial_pose_x" value="2"/>
            <param name="initial_pose_y" value="2"/>
            <param name="initial_pose_a" value="0"/>
        </node>
    </group>

    <!--  **************** Visualisation ****************  -->
    <node name="rviz" pkg="rviz" type="rviz" args="-d $(find tt_start)/stage/rviz/rviz_navigation.rviz"/>

</launch>
